---
// Explicit imports
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Expertise from '../components/Expertise.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Efficient, compliant validation for life sciences." />
    <title>GoVal Paperless Validation Solution</title>
    <!-- Skip favicon for now to avoid issues -->
  </head>
  <body>
    <Header />
    <main>
      <Hero />
      <Expertise />
    </main>
    <Footer />
    <script>
      console.log('GoVal site loaded! Check if content is visible.');
    </script>
  </body>
</html>

<style>
  /* Stronger global styles to ensure visibility */
  :global(body) {
    font-family: Arial, sans-serif !important;
    line-height: 1.6 !important;
    margin: 0 !important;
    padding: 0 !important;
    color: #000000 !important;  /* Black text for max visibility */
    background-color: #ffffff !important;  /* Pure white background */
  }
  :global(h1, h2) {
    color: #000000 !important;  /* Blue headings */
    font-size: 2em !important;  /* Bigger for testing */
  }
  :global(p) {
    color: #000000 !important;  /* Ensure paragraphs are black */
    font-size: 16px !important;
  }
  :global(section) {
    min-height: 200px !important;  /* Force sections to show space */
    border: 1px solid #ccc !important;  /* Add borders for debugging visibility */
  }

  /* Responsive: Mobile Compatibility (Stack + Scale, No Color Changes) */
  @media (max-width: 768px) {
    :global(body) {
      padding: 0 !important;  /* No extra padding */
      width: 100% !important;  /* Full width */
      overflow-x: hidden !important;  /* Prevent horizontal scroll */
    }
    :global(main) {
      width: 100% !important;
      display: block !important;  /* Ensure block flow */
    }
    :global(h1, h2) {
      font-size: 1.6em !important;  /* Scale down for mobile */
      text-align: center !important;  /* Center headings */
      line-height: 1.3 !important;  /* Better wrapping */
      margin: 0 auto 15px !important;  /* Auto margins */
    }
    :global(h3, h6) {
      font-size: 1.3em !important;
      text-align: center !important;
    }
    :global(p) {
      font-size: 14px !important;  /* Smaller para for readability */
      text-align: center !important;  /* Center text */
      padding: 0 10px !important;  /* Side breathing room */
      margin: 0 auto 15px !important;
      line-height: 1.5 !important;
    }
    :global(section) {
      min-height: 150px !important;  /* Shorter sections on mobile */
      padding: 20px 15px !important;  /* Reduced padding */
      margin: 10px 0 !important;  /* Vertical spacing */
      width: 100% !important;  /* Full width */
      box-sizing: border-box !important;
    }
    :global(section div) {
      width: 100% !important;  /* Full-width inner divs */
      text-align: center !important;
    }
    :global(button) {
      width: 100% !important;  /* Full-width buttons */
      max-width: 250px !important;
      padding: 12px 20px !important;  /* Touch-friendly (min 44px) */
      font-size: 16px !important;  /* No zoom */
      margin: 10px auto !important;  /* Center */
    }
    :global(img) {
      max-width: 100% !important;  /* Responsive images */
      height: auto !important;
      margin: 0 auto !important;  /* Center */
    }
    :global(ul, ol) {
      padding-left: 20px !important;  /* Indent lists */
      text-align: left !important;
    }
    :global(.grid, [style*="display: grid"]) {
      display: block !important;  /* Stack grids vertically */
      width: 100% !important;
    }
    :global(.grid > div, [style*="grid-template-columns"] > div) {
      width: 100% !important;
      margin-bottom: 15px !important;
      display: block !important;
    }
    
    /* Extra for very small phones: Tighter layout */
    @media (max-width: 480px) {
      :global(h1, h2) {
        font-size: 1.4em !important;
      }
      :global(p) {
        font-size: 13px !important;
        padding: 0 5px !important;
      }
      :global(section) {
        padding: 15px 10px !important;
        min-height: 120px !important;
        margin: 5px 0 !important;
      }
      :global(button) {
        padding: 14px 25px !important;
        font-size: 15px !important;
      }
      :global(img) {
        max-width: 90% !important;  /* Slight cap for tiny screens */
      }
    }
  }
</style>
